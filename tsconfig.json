{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noEmit": true,
    "skipLibCheck": true,

    "declaration": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./app/components/*"
      ],
      "@helpers/*": [
        "./app/helpers/*"
      ],
      "@styles/*": [
        "./app/styles/*"
      ],
      "@i18n/*": [
        "./app/i18n/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
